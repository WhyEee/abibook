= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),
                  :html => { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend Login
    = f.input :email
    = f.input :password
    .form-actions
      = f.submit "Login", :class => 'btn-primary btn-large'
      = link_to 'Passwort vergessen?', password_path(resource_name), :class => 'btn btn-large'