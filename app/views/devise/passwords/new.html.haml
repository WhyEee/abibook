= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name),
                  :html => { :class => 'form-horizontal', :method => :post }) do |f|
  %fieldset
    %legend Passwort vergessen?
    = f.input :email
    .form-actions
      = f.submit 'Passwort-Link anfordern', :class => 'btn-large btn-primary'