= simple_form_for(resource, :as => resource_name, :url => edit_password_path(resource_name),
                  :html => { :class => 'form-horizontal', :method => :put }) do |f|
  %fieldset
    %legend Passwort ändern
    = f.input :password
    = f.input :password_confirmation
    .form-actions
      = f.hidden_field :reset_password_token
      = f.submit 'Passwort ändern', :class => 'btn-large btn-primary'