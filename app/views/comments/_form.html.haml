= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.association :subject, :collection => Student.where('id != ?', current_user.student.id).order(:name), :label_method => :sortable_name
    = f.input :content, :input_html => { :class => 'span6' }
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to 'Abbrechen', comments_path, :class => 'btn'
