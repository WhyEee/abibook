.page-header
  %h1 Abgegebene Kommentare

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Empfänger
      %th Kommentar
      %th Aktionen
  %tbody
  - @comments.each do |comment|
    %tr
      %td= comment.id
      %td= comment.subject.full_name
      %td= comment.content
      %td
        = link_to 'Bearbeiten', edit_comment_path(comment), :class => 'btn btn-mini'
        = link_to 'Löschen', comment, :confirm => 'Ganz sicher?', :method => :delete, :class => 'btn btn-mini btn-danger'

%br

= link_to 'Neuen Kommentar abgeben', new_comment_path, :class => 'btn btn-primary'
