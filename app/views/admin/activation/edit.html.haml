.page-header
  %h1 Benutzer freischalten

= simple_form_for @user, :url => edit_activations_path, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :full_name, :disabled => true
    = f.input :email, :disabled => true
    = f.association :student, :collection => Student.where('id != ?', current_user.student.id).order(:name), :label_method => :sortable_name
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to 'Abbrechen', activations_path, :class => 'btn'